.root
  border-normal()
  border-radius: $br.l
  box-sizing: border-box
  padding: $cs.l
  display: flex
  flex-direction: column
  gap: $cs.l

  .top
    border-normal()
    box-sizing: border-box
    border-radius: $br.l
    display: flex

  .img-div
    background-color: $c-backdrop-lighter
    border-radius: $br.l 0 0 $br.l
    .image
      height: 6rem
      width: auto

  .horizontal-line
    background-color: $c-divider

  .connections
    border-normal()
    box-sizing: border-box
    border-radius: $br.l
    display: flex
    flex-direction: column
    gap: $cs.xxs
    padding: $cs.m $cs.s

  .connection
    padding-inline: $cs.xxs
    // TODO: Change color
    background-color: #EEEFF9
    border-radius: $br.m

  .details
    & tr:not(:first-child)
      height: 2rem
    & th
      width: 40%
